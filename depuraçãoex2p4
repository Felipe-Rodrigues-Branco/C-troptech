using System;

namespace debug
{
    class Program
    {
        static void Main(string[] args) // novamente alterações em variaveis apenas.
        {

            Console.Write("Digite a medida em cm da base do triângulo: ");
            var baseT = Convert.ToDouble(Console.ReadLine());

            Console.Write("Digite a medida em cm da altura do triângulo: ");
            var alturaT = Convert.ToDouble(Console.ReadLine());

            var area = (baseT * alturaT) / 2;

            Console.WriteLine($"A área do triângulo é: {area}");
        }
    }
}
