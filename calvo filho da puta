using System;
using System.Collections.Generic;
					
public class Program
{
	public static void Main()
	{
		LinkedList<string> listaProdutos = new LinkedList<string>();
		int opcao = 0;

		do
		{
			Console.WriteLine("Bem vindo ao cadastro de Produtos");
			Console.WriteLine("0 - Sair");
			Console.WriteLine("1 - Cadastrar um produto no início da lista");
			Console.WriteLine("2 - Cadastrar um produto no final da fila");
			Console.WriteLine("3 - Cadastrar um produto no meio da lista");
			Console.WriteLine("4 - Remover o primeiro produto da lista");
			Console.WriteLine("5 - Remover o último produto da lista");
			Console.WriteLine("6 - Remover um produto pelo seu nome");
			Console.WriteLine("7 - Limpar a lista de produtos");

			Console.Write("Informe a opção desejada:");
			opcao = Convert.ToInt32(Console.ReadLine());

			if (opcao == 1)
			{
				Console.Write("Informe o nome do primeiro produto: ");
				var nomeProduto = Console.ReadLine();
				listaProdutos.AddFirst(nomeProduto);
			}

			if (opcao == 2)
			{
				Console.Write("Informe o nome do último produto: ");
				var nomeProduto = Console.ReadLine();
				listaProdutos.AddLast(nomeProduto);
			}

			if (opcao == 3)
			{
				Console.Write("Informe o nome do produto aleatório da lista: ");
				var nomeProduto = Console.ReadLine();

				var primeiroProduto = listaProdutos.First;
				if (primeiroProduto != null)
				{
					listaProdutos.AddAfter(primeiroProduto, nomeProduto);
				}
				else
					listaProdutos.AddFirst(nomeProduto);
			}

			if (opcao == 4)
			{
				var primeiroProduto = listaProdutos.First;
				if (primeiroProduto != null)
				{
					listaProdutos.RemoveFirst();
					Console.WriteLine("Primeiro produto da lista removido");
				}
				else
					Console.WriteLine("Não existem produtos na lista para serem removidos");
			}

			if (opcao == 5)
			{
				var ultimoProduto = listaProdutos.Last;
				if (ultimoProduto != null)
				{
					listaProdutos.RemoveFirst();
					Console.WriteLine("Último produto da lista removido");
				}
				else
					Console.WriteLine("Não existem produtos na lista para serem removidos");
			}

			if (opcao == 6)
			{
				var quantidadeProdutos = listaProdutos.Count;

				if (quantidadeProdutos > 0)
				{
					Console.Write("Informe o nome do produto a ser removido: ");
					var nomeProduto = Console.ReadLine();

					if (listaProdutos.Contains(nomeProduto))
					{
						listaProdutos.Remove(nomeProduto);
						Console.WriteLine("Produto removido");
					}
					else
					{
						Console.WriteLine("Produto não encontrado");
					}
				}
				else
					Console.WriteLine("Não existem produtos na lista para serem removidos");
			}

			if (opcao == 7)
			{
				listaProdutos.Clear();
				Console.WriteLine("Lista limpa.");
			}

			Console.WriteLine($"Quantidade de itens: {listaProdutos.Count}.");
			Console.WriteLine($"Lista Produtos:");
			for (var node = listaProdutos.First; node != null; node = node.Next)
			{
				Console.WriteLine(node.Value);
			}

		} while (opcao != 0);
	}
}
